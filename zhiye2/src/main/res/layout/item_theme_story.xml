<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/theme_story_list_card_view"
    style="@style/AppThemeCardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="64dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/thumbnail_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/news_image_preview"
            android:padding="@dimen/view_padding"
            tools:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/story_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/thumbnail_image"
            android:padding="@dimen/view_padding"
            android:textSize="@dimen/list_text_max_size"
            android:textStyle="bold"
            tools:text="@string/app_name"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>