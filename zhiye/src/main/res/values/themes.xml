<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 亮色主题 -->
    <style name="Theme.Zhiye.Light.NoActionbar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="popupTheme">@style/OverflowMenuStyle</item>
        <item name="textAppearanceLargePopupMenu">
            @style/Theme.Zhiye.Light.PopupMenuTextAppearanceLarge
        </item>
        <item name="android:textAppearanceLargePopupMenu">
            <!-- 菜单的颜色 底部菜单-->
            @style/Theme.Zhiye.Light.PopupMenuTextAppearanceLarge
        </item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <!--<item name="actionMenuTextColor">@color/colorWhite</item>-->
    </style>

    <style name="Theme.Zhiye.Light.NoActionbar.Translucent" parent="Theme.Zhiye.Light.NoActionbar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Zhiye.Light.NoActionbar.Preferences" parent="Theme.Zhiye.Light.NoActionbar">
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColor">@color/titleGrayDark</item>
    </style>

    <style name="Theme.Zhiye.Light.PopupMenuTextAppearanceLarge" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <!-- 弹出菜单的字体颜色 -->
        <item name="android:textColor">@color/colorDarkPrimaryDark</item>
    </style>

    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:popupBackground">@color/colorPrimary</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">0dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>


    <!-- 暗色主题 -->
    <style name="Theme.Zhiye.Dark.NoActionbar" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimaryDark</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="popupTheme">@style/Widget.AppCompat.Light.PopupMenu.Overflow</item>
        <item name="textAppearanceLargePopupMenu">
            @style/Theme.Zhiye.Dark.PopupMenuTextAppearanceLarge
        </item>
        <item name="android:textAppearanceLargePopupMenu">
            @style/Theme.Zhiye.Dark.PopupMenuTextAppearanceLarge
        </item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="actionMenuTextColor">@color/colorWhite</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyleDark</item>
    </style>

    <style name="Theme.Zhiye.Dark.Preferences" parent="Theme.Zhiye.Dark.NoActionbar">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="Theme.Zhiye.Dark.PopupMenuTextAppearanceLarge" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/colorDarkPrimaryDark</item>
    </style>

    <style name="Theme.Zhiyu.Light.NoActionBar.Translucent" parent="Theme.Zhiye.Light.NoActionbar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="OverflowMenuStyleDark" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:popupBackground">@color/colorDarkPrimary</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">0dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>
</resources>