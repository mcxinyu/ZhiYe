<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_list_card_view"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        tools:ignore="UselessParent">

        <ImageView
            tools:src="@mipmap/ic_launcher"
            android:id="@+id/thumbnail_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:padding="8dp"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/news_image_preview"/>

        <TextView
            tools:text="@string/app_name"
            android:id="@+id/question_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_toEndOf="@id/thumbnail_image"/>

        <TextView
            android:id="@+id/daily_title"
            tools:text="@string/app_name"
            android:textSize="14sp"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/thumbnail_image"
            android:layout_below="@id/question_title"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"/>

        <!--<ImageView-->
            <!--android:id="@+id/card_share_overflow"-->
            <!--android:contentDescription="@string/share_this_news"/>-->
    </RelativeLayout>
</android.support.v7.widget.CardView>